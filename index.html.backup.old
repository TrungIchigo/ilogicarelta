        async function loadPDP(productId) {
            // Check if Supabase client is available
            if (!supabaseClient) {
                console.error("Supabase client not initialized for PDP.");
                alert(currentLang === 'vi' ? 'Lỗi kết nối cơ sở dữ liệu. Vui lòng thử lại.' : 'Database connection error. Please try again.');
                return;
            }

            // Show loading state for gallery
            const swiperWrapper = document.querySelector('#pdp-gallery-swiper .swiper-wrapper');
            if (swiperWrapper) {
                swiperWrapper.innerHTML = `
                    <div class="swiper-slide">
                        <div class="loading-spinner" style="display: flex; justify-content: center; align-items: center; height: 300px;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                        </div>
                    </div>`;
                if (window.pdpSwiper) {
                    window.pdpSwiper.destroy(true, true); // Destroy old swiper if exists
                    window.pdpSwiper = null;
                }
            }

            // Show loading state for product info
            const pdpInfo = document.querySelector('.pdp-info');
            if (pdpInfo) {
                const productNameEl = pdpInfo.querySelector('.product-name');
                const brandEl = pdpInfo.querySelector('.brand');
                const skuEl = pdpInfo.querySelector('.sku');
                const currentPriceEl = pdpInfo.querySelector('.current-price');
                const originalPriceEl = pdpInfo.querySelector('.original-price');
                const discountTagEl = pdpInfo.querySelector('.discount-tag');
                
                if (productNameEl) productNameEl.textContent = 'Đang tải sản phẩm...';
                if (brandEl) brandEl.textContent = '';
                if (skuEl) skuEl.textContent = '';
                if (currentPriceEl) currentPriceEl.textContent = '';
                if (originalPriceEl) originalPriceEl.textContent = '';
                if (discountTagEl) discountTagEl.style.display = 'none';
                
                const specsTable = pdpInfo.querySelector('.specs-table');
                if (specsTable) {
                    specsTable.innerHTML = '<tr><td colspan="2">Đang tải thông số...</td></tr>';
                }
                
                const descContent = pdpInfo.querySelector('.description-content');
                if (descContent) {
                    descContent.innerHTML = '<p>Đang tải mô tả...</p>';
                }
                
                const shopNameEl = pdpInfo.querySelector('.pdp-shop-info .shop-name');
                if (shopNameEl) {
                    shopNameEl.textContent = 'Đang tải...';
                }
            }

            // Disable action buttons during loading
            const addToCartBtnPDP = document.getElementById('pdp-add-to-cart-pdp-mobile');
            const buyNowBtnPDP = document.getElementById('pdp-buy-now-btn');
            if (addToCartBtnPDP) addToCartBtnPDP.disabled = true;
            if (buyNowBtnPDP) buyNowBtnPDP.disabled = true;

            try {
                // Fetch product data from Supabase
                console.log('Loading product with ID:', productId);
                
                const { data: product, error } = await supabaseClient
                    .from('products')
                    .select(`
                        *,
                        sellers(shop_name)
                    `)
                    .eq('id', productId)
                    .eq('status', 'published')
                    .eq('visibility', 'public')
                    .single();

                if (error) {
                    console.error("Supabase error fetching product:", error);
                    throw new Error(`Database error: ${error.message}`);
                }

                if (!product) {
                    console.error("Product not found for ID:", productId);
                    throw new Error('Product not found');
                }

                console.log("Product loaded successfully from Supabase:", product);

                // Update gallery images
                if (swiperWrapper) {
                    let productImages = [];
                    
                    // Handle different image formats from Supabase
                    if (product.image_urls && Array.isArray(product.image_urls) && product.image_urls.length > 0) {
                        productImages = product.image_urls;
                    } else if (product.main_image) {
                        productImages = [product.main_image];
                    } else {
                        productImages = ['images/placeholder.jpg'];
                    }

                    swiperWrapper.innerHTML = productImages.map((url, index) => `
                        <div class="swiper-slide">
                            <img src="${url}" 
                                 alt="${product.name} - Hình ${index + 1}" 
                                 class="product-image" 
                                 loading="${index === 0 ? 'eager' : 'lazy'}"
                                 onerror="this.onerror=null; this.src='images/placeholder.jpg';">
                        </div>
                    `).join('');
                    
                    // Initialize swiper
                    initPDPSwiper();
                }

                // Update product information
                if (pdpInfo) {
                    // Basic product info
                    const productNameEl = pdpInfo.querySelector('.product-name');
                    const brandEl = pdpInfo.querySelector('.brand');
                    const skuEl = pdpInfo.querySelector('.sku');
                    const currentPriceEl = pdpInfo.querySelector('.current-price');
                    const originalPriceEl = pdpInfo.querySelector('.original-price');
                    const discountTagEl = pdpInfo.querySelector('.discount-tag');

                    if (productNameEl) productNameEl.textContent = product.name || 'Tên sản phẩm không có';
                    if (brandEl) brandEl.textContent = product.brand || 'Chưa có thương hiệu';
                    if (skuEl) skuEl.textContent = `SKU: ${product.sku || 'N/A'}`;
                    
                    // Price information
                    const currentPrice = parseFloat(product.price) || 0;
                    const originalPrice = parseFloat(product.base_price || product.original_price) || 0;
                    
                    if (currentPriceEl) currentPriceEl.textContent = formatCurrency(currentPrice);

                    // Handle discount display
                    if (originalPrice && originalPrice > currentPrice) {
                        if (originalPriceEl) {
                            originalPriceEl.textContent = formatCurrency(originalPrice);
                            originalPriceEl.style.display = 'inline';
                        }
                        if (discountTagEl) {
                            const discount = Math.round(((originalPrice - currentPrice) / originalPrice) * 100);
                            discountTagEl.textContent = `-${discount}%`;
                            discountTagEl.style.display = 'inline-block';
                        }
                    } else {
                        if (originalPriceEl) originalPriceEl.style.display = 'none';
                        if (discountTagEl) discountTagEl.style.display = 'none';
                    }

                    // Update specifications
                    const specsTable = pdpInfo.querySelector('.specs-table');
                    if (specsTable) {
                        if (product.specifications) {
                            try {
                                let specs = product.specifications;
                                // Parse if it's a string
                                if (typeof specs === 'string') {
                                    specs = JSON.parse(specs);
                                }
                                
                                if (specs && typeof specs === 'object' && Object.keys(specs).length > 0) {
                                    specsTable.innerHTML = Object.entries(specs)
                                        .map(([key, specValue]) => {
                                            let label = key;
                                            let value = specValue;
                                            
                                            // Handle different spec formats
                                            if (typeof specValue === 'object' && specValue !== null) {
                                                if (specValue.label && specValue.value) {
                                                    label = specValue.label;
                                                    value = specValue.value;
                                                } else {
                                                    value = JSON.stringify(specValue);
                                                }
                                            }
                                            
                                            // Format label
                                            label = label.replace(/_/g, ' ')
                                                       .replace(/\b\w/g, l => l.toUpperCase());
                                            
                                            return `<tr><td>${label}</td><td>${value}</td></tr>`;
                                        }).join('');
                                } else {
                                    specsTable.innerHTML = '<tr><td colspan="2">Không có thông số kỹ thuật</td></tr>';
                                }
                            } catch (e) {
                                console.error("Error parsing specifications:", e);
                                specsTable.innerHTML = '<tr><td colspan="2">Lỗi hiển thị thông số kỹ thuật</td></tr>';
                            }
                        } else {
                            specsTable.innerHTML = '<tr><td colspan="2">Không có thông số kỹ thuật</td></tr>';
                        }
                    }

                    // Update description
                    const descContent = pdpInfo.querySelector('.description-content');
                    if (descContent) {
                        const description = product.description || product.detailed_description || '';
                        if (description) {
                            descContent.innerHTML = description.replace(/\n/g, '<br>');
                        } else {
                            descContent.innerHTML = '<p>Không có mô tả chi tiết.</p>';
                        }
                    }

                    // Update shop information
                    const shopNameEl = pdpInfo.querySelector('.pdp-shop-info .shop-name');
                    if (shopNameEl) {
                        const shopName = product.sellers?.shop_name || 'Shop đối tác';
                        shopNameEl.textContent = shopName;
                        console.log('Shop name updated:', shopName);
                    }
                } else {
                    console.warn('PDP info container not found');
                }

                // Update action buttons
                const isInStock = product.stock_status === 'in_stock' || product.quantity > 0;
                
                if (addToCartBtnPDP) {
                    addToCartBtnPDP.dataset.productId = product.id;
                    addToCartBtnPDP.disabled = !isInStock;
                    addToCartBtnPDP.textContent = isInStock ? 'Thêm vào giỏ' : 'Hết hàng';
                }
                
                if (buyNowBtnPDP) {
                    buyNowBtnPDP.dataset.productId = product.id;
                    buyNowBtnPDP.disabled = !isInStock;
                    
                    const buyNowPriceEl = document.getElementById('pdp-buy-now-price');
                    if (buyNowPriceEl) {
                        buyNowPriceEl.textContent = formatCurrency(currentPrice);
                    }
                }

                // Show the PDP section
                showSection('pdp-section');

                // Update page title
                document.title = `${product.name} - i-LogiCare`;

            } catch (error) {
                console.error("Error loading PDP:", error);
                
                // Show error state
                if (swiperWrapper) {
                    swiperWrapper.innerHTML = `
                        <div class="swiper-slide">
                            <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 300px; color: #6B7280;">
                                <i class="ri-error-warning-line" style="font-size: 48px; margin-bottom: 16px;"></i>
                                <p>Không thể tải hình ảnh sản phẩm</p>
                            </div>
                        </div>`;
                }
                
                if (pdpInfo) {
                    const productNameEl = pdpInfo.querySelector('.product-name');
                    const descContent = pdpInfo.querySelector('.description-content');
                    if (productNameEl) productNameEl.textContent = 'Lỗi tải sản phẩm';
                    if (descContent) descContent.innerHTML = '<p>Không thể tải thông tin sản phẩm. Vui lòng thử lại sau.</p>';
                }
                
                // Show user-friendly error message
                const errorMessage = error.message.includes('not found') 
                    ? 'Sản phẩm không tồn tại hoặc đã bị xóa.'
                    : 'Có lỗi khi tải thông tin sản phẩm. Vui lòng thử lại sau.';
                    
                alert(currentLang === 'vi' ? errorMessage : 'Error loading product details. Please try again.');
                
                // Redirect to homepage after 2 seconds
                setTimeout(() => {
                    showSection('homepage-section');
                }, 2000);
            }
        }

        // Initialize Swiper
        let pdpSwiper = null;

        function initPDPSwiper() {
            if (pdpSwiper) {
                pdpSwiper.destroy();
            }
            
            pdpSwiper = new Swiper(".swiper-container", {
                slidesPerView: 1,
                spaceBetween: 30,
                loop: true,
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true,
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
            });
        }

